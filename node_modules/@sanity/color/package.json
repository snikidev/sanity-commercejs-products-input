{
  "name": "@sanity/color",
  "version": "1.0.0",
  "description": "The Sanity color palette.",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "sideEffects": false,
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "run-p build-*",
    "build-cjs": "tsc --baseUrl . --module CommonJS --outDir dist/cjs --project tsconfig.dist.json --rootDir src --target ES5",
    "build-es": "tsc --baseUrl . --module ES6 --outDir dist/es --project tsconfig.dist.json --rootDir src --target ES6",
    "clean": "rimraf dist",
    "generate": "ts-node scripts/build.ts",
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "npm run clean && npm run generate",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@types/prettier": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.3.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "npm-run-all": "4.1.5",
    "polished": "^3.6.5",
    "prettier": "^2.0.5",
    "rimraf": "3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/color.git"
  },
  "keywords": [
    "sanity",
    "color",
    "palette"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sanity-io/color/issues"
  },
  "homepage": "https://www.sanity.io/"
}
